{% extends '@EnotAdmin/base.html.twig' %}
{% block page_name %}Партнеры{% endblock %}
{% block content %}
    <!-- Breadcrumbs line -->
    <div class="crumbs">
        <ul id="breadcrumbs" class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="{{ path('enot_admin_homepage') }}">Партнеры</a>
            </li>
        </ul>

    </div>
    <!-- /Breadcrumbs line -->

    <!--=== Page Header ===-->
    <div class="page-header">
        <div class="page-title">
            <h3>Партнеры</h3>
        </div>
    </div>
    <!-- /Page Header -->

    <!--=== Page Content ===-->
    <div class="row">
        <!--=== Example Box ===-->
        <div class="col-md-12">

            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Партнеры в системе </h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>
                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable table-responsive datatable">
                        <thead>
                        <tr>
                            <th data-class="expand">ID</th>
                            <th>Название партенра</th>
                            <th>Размер автопарка</th>
                            <th>Рейтинг</th>
                            <th>Баланс</th>
                            <th>Дата регистрации</th>
                            <th>Войти/Редактировать</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for partner in partners %}
                            <tr>
                                <td>{{ partner.id }}</td>
                                <td>{{ partner.name }}</td>
                                <td>{{ partner.getActiveVehicles()|length }}</td>
                                <td>{{ partner.priority }}</td>
                                <td>{{ partner.balance }}</td>
                                <td>{{ partner.createdAt|date('d.m.Y') }}</td>
                                <td>
                                    <a href="{{ path('enot_admin_partner_under_user', {id: partner.id}) }}"><button class="btn btn-sm"><i class="icon-user"></i> </button></a>
                                    <a href="{{ path('enot_admin_partner_edit', {id: partner.id}) }}"><button class="btn btn-sm"><i class="icon-pencil"></i></button></a>
                                </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>

        </div> <!-- /.col-md-12 -->
        <!-- /Example Box -->
    </div>
{% endblock %}


{% block script %}
    <script>
        document.getElementById("partner-link").classList.add("current");
    </script>
{% endblock %}