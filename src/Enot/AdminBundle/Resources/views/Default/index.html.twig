{% extends '@EnotAdmin/base.html.twig' %}
{% block page_name %}Главная{% endblock %}
{% block content %}
    <div class="crumbs">
        <ul id="breadcrumbs" class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="index.html">Главная</a>
            </li>
        </ul>

    </div>
    <!-- /Breadcrumbs line -->

    <!--=== Page Header ===-->
    <div class="page-header">
        <div class="page-title">
            <h3>Главная</h3>
        </div>
    </div>
    <!-- /Page Header -->

    <!--=== Page Content ===-->
    <div class="row">
        <!--=== Example Box ===-->
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Заявки </h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>
                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable table-responsive datatable">
                        <thead>
                        <tr>
                            <th data-class="expand">Назначены но не приняты</th>
                            <th>Заявки в пути</th>
                            <th>Убыл от клиента</th>
                            <th>На выгрузке</th>
                            <th>Завершены сегодня</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ waiting_count|length }}</td>
                            <td>{{ loaded_count|length }}</td>
                            <td>{{ delivered_count|length }}</td>
                            <td>{{ departure_count|length }}</td>
                            <td>{{ completed_count|length }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div> <!-- /.col-md-12 -->
    <!-- /Example Box -->
    <div class="row">
        <!--=== Example Box ===-->
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Общая информация </h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>
                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable table-responsive datatable">
                        <thead>
                        <tr>
                            {% if is_granted("ROLE_SUPER_ADMIN") %}
                                <th data-class="expand">Партнеров</th>{% endif %}
                            <th>Водителей</th>
                            <th>Автомобилей</th>
                            <th>Заявок</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            {% if is_granted("ROLE_SUPER_ADMIN") %}
                                <td>{{ partner_count }}</td>{% endif %}
                            <td>{{ driver_count }}</td>
                            <td>{{ vehicle_count }}</td>
                            <td>{{ transportation_count }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

{% endblock %}


{% block script %}
    <script>
        document.getElementById("main-link").classList.add("current");
    </script>
{% endblock %}